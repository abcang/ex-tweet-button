{
  "manifest_version": 3,
  "name": "ExTweetButton",
  "version": "2.1.2",
  "description": "ページ内のTweetButtonを使ってツイートします。いちいちボタンを探す必要はありません。",
  "icons": {
    "16": "icons/icon_16.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "19": "icons/icon_19.png",
      "38": "icons/icon_38.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://platform.twitter.com/*"
  ]
}
